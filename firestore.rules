rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Match any document in the 'files' collection
    match /files/{fileId} {
      // Allow a user to read or write a file if:
      // 1. They are logged in (request.auth != null)
      // 2. Their user ID (request.auth.uid) matches the authorId saved on the document
      allow read, write: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
  }
}