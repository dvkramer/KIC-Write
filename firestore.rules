rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule applies to any single document in the 'files' collection
    match /files/{fileId} {

      // Allow a user to CREATE a document if they are logged in
      // and the authorId in the NEW document's data matches their own user ID.
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;

      // Allow a user to GET or UPDATE an existing document if they are logged in
      // and their user ID matches the authorId on the EXISTING document.
      allow get, update: if request.auth != null && resource.data.authorId == request.auth.uid;
      
      // Allow a user to LIST (query) documents from the collection if they are logged in.
      // The query's 'where' clause in your code is what ensures they only see their own files.
      allow list: if request.auth != null;
    }
  }
}